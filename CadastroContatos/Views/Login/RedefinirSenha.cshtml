@model RedefinirSenhaModel
@{
    Layout = "_Layout_Deslogado";
    ViewData["Title"] = "Redefinir Senha";
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}
<form asp-controller="Login" asp-action="ResetSenha" method="post">
    <div>
        <div class="mb-3">
            <label for="Login" class="form-label">Login</label>
            <input type="text" asp-for="Login" class="form-control" id="Login">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" asp-for="Email" class="form-control" id="email">
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary btn-block">Redefinir Senha</button>
            <a class="btn btn-secondary btn-block" asp-controller="Login" asp-action="Index" role="button">Voltar</a>

        </div>

    </div>
</form>