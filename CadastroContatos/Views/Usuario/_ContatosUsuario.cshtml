@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}
<table class="table table-hover" id="table-contatos-usuario">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Celular</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.Celular</td>
                </tr>
            }
        }
        else
        {
            <tr class="odd">
                <td valign="top" colspan="4">Nenhum contato encontrado</td>
            </tr>
        }
    </tbody>
</table>
